@using TerranForum.ViewModels.Forum
@model CreateForumViewModel

<h2 class="mb-5">Create a new thread</h2>
<form method="post" asp-controller="Forum" asp-action="CreateThread">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Title" class="h5 font-weight-bold">Title</label>
        <input asp-for="Title" name="title" class="form-control" autocomplete="username" aria-required="true" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group mt-4">
        <label asp-for="Content" class="h5 font-weight-bold">Content</label>
        <textarea asp-for="Content" name="content" class="form-control" autocomplete="new-password" aria-required="true"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>
    <button id="registerSubmit" type="submit" class="mt-4 button primary-button">Post</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}